# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,sh}]
indent_size = 4

[*.{pas,inc}]
end_of_line=crlf
ident_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
